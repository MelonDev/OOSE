<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/main_card_list"
            app:cardCornerRadius="12dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="80dp"
            app:cardBackgroundColor="@color/colorGray900">
            <android.support.v7.widget.CardView
                app:cardCornerRadius="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/colorWhite"
                android:layout_margin="1dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.CardView
                        app:cardCornerRadius="12dp"
                        android:layout_width="64dp"
                        android:layout_height="53dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="13dp"
                        app:cardBackgroundColor="@color/colorGray900">
                        <android.support.v7.widget.CardView
                            app:cardCornerRadius="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            app:cardBackgroundColor="@color/colorGreen400">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_double_size_bed"/>
                        </android.support.v7.widget.CardView>
                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="40dp">
                        <TextView
                            android:id="@+id/TextView_Card_List"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ห้อง 101"
                            android:textSize="28dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ชื่อ - นามสกุล"
                            android:textSize="18dp"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>